generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AreaNode {
  id          Int     @id @default(autoincrement())
  areaName    String
  tileId      Int     @default(0)
  position    Float[]
  type        String
  name        String
  description String?
  screenshot  String?
  userId      Int
  user        User    @relation(fields: [userId], references: [id])

  @@index([areaName])
}

model User {
  id    Int        @id @default(autoincrement())
  token String     @unique
  nodes AreaNode[]

  @@index([token])
}
